<OntologyConfiguration>
	<!-- Описание онтологии. -->
    <MainOntology>
        <URL>http://VolgoWaste.owl</URL>
        <LocalCopy>VolgoWasteExt.owl</LocalCopy>
    </MainOntology>

    <CaseMainConcept>Case</CaseMainConcept>

    <DescriptionClassName>cbrapp.CbrDescription</DescriptionClassName>

    <DescriptionMappings>
		<!-- Описание класса опасности. -->
		<Map>
			<Property>class</Property>			<!-- Свойство case в онтологии -->
			<Concept>Класс_опасности</Concept>	<!-- Тип свойства в онтологии  -->
			<Attribute>danger</Attribute>		<!-- Поле в java классе        -->
		</Map>
		<!-- Описание количества отходов. -->
		<Map>
			<Property>count</Property>
			<Concept>TrashCount</Concept>
			<Attribute>count</Attribute>
		</Map>
		<!-- Описание агрегатного состояния. -->
		<Map>
			<Property>state</Property>
			<Concept>AggregateState</Concept>
			<Attribute>state</Attribute>
		</Map>
		<!-- Описание времени разложения. -->
		<Map>
			<Property>time</Property>
			<Concept>FullDestroyTime</Concept>
			<Attribute>time</Attribute>
		</Map>
		<!-- Описание типа отходов. -->
		<Map>
			<Property>types</Property>
			<Concept>Отход</Concept>
			<Attribute>types</Attribute>
		</Map>
    </DescriptionMappings>
    <SolutionClassName>cbrapp.CbrSolution</SolutionClassName>
    <SolutionMappings>
        <Map>
            <Property>solution</Property>
            <Concept>Solutions</Concept>
            <Attribute>result</Attribute>
        </Map>
    </SolutionMappings>
</OntologyConfiguration>